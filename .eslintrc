{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "ecmaVersion": 2018,
        "module": "commonjs",
        "sourceType": "module"
    },

    "plugins": ["react", "prettier"],
    "rules": {
        "react/jsx-uses-vars": 1,
        "prettier/prettier": "error"
    }
}